# List of directories that cd searches.
export CDPATH="/Volumes"
# CDPATH="/media/$USER" # for Debian systems

# Define important directories
Desk="$HOME/Library/Mobile Documents/com~apple~CloudDocs/Desktop"
Down="$HOME/Downloads"
Pub="$HOME/Public"
Uni="$HOME/Library/Mobile Documents/com~apple~CloudDocs/University"
Busi="$HOME/Business"
Site="$HOME/Sites"
Pro="$HOME/Projects"

# List of directories that Node.js searcbes for modules.
export NODE_PATH="/usr/local/node/lib/node_modules"

# Location of the Node Version Manager
export NVM_ARGS="--no-use"
export NVM_DIR="/usr/local/nvm"

# Location of Perlbrew
export PERLBREW_ROOT="/usr/local/perlbrew"

# Location of rbenv
export RBENV_ROOT="/usr/local/rbenv"

# Location of pyenv
export PYENV_ROOT="/usr/local/pyenv"

DEFAULT_USER=vbwx
